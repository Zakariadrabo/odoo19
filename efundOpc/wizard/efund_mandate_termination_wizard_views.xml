<odoo>

    <record id="view_efund_mandate_termination_form" model="ir.ui.view">
        <field name="name">efund.mandate.termination.form</field>
        <field name="model">efund.mandate.termination.wizard</field>
        <field name="arch" type="xml">
            <form string="Clôture du mandat">

                <sheet>

                    <!-- MESSAGE CONTEXTUEL -->
                    <group>
                        <div class="o_form_label text-warning">
                            Vous êtes sur le point de clôturer définitivement ce mandat.
                        </div>
                    </group>

                    <!-- CONTEXTE -->
                    <group col="2">
                        <group>
                            <field name="mandate_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="cash_account_id"/>
                        </group>
                    </group>

                    <!-- DONNÉES FINANCIÈRES -->
                    <group string="Remboursement du capital">
                        <group col="2">
                            <field name="capital_remaining"/>
                            <field name="currency_id"/>
                        </group>
                    </group>

                    <!-- DÉCISION -->
                    <group string="Décision de clôture">
                        <field name="execution_date"/>
                        <field name="reason" placeholder="Ex : Arrivée à échéance contractuelle"/>
                    </group>

                </sheet>

                <footer>
                    <button name="action_confirm" type="object" string="Confirmer la clôture" class="btn-danger"/>
                    <button string="Annuler" special="cancel" class="btn-secondary"/>
                </footer>

            </form>
        </field>
    </record>

</odoo>
