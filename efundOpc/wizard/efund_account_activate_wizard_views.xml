<odoo>

    <!-- =============================== -->
    <!-- WIZARD : ACTIVATION DE COMPTE   -->
    <!-- =============================== -->
    <record id="view_efund_account_activate_wizard_form" model="ir.ui.view">
        <field name="name">efund.account.activate.wizard.form</field>
        <field name="model">efund.account.activate.wizard</field>
        <field name="arch" type="xml">
            <form string="Activation du compte">

                <sheet>

                    <!-- MESSAGE CONTEXTUEL -->
                    <group>
                        <div class="o_form_label text-warning">
                            Vous êtes sur le point d’activer un compte.
                        </div>
                    </group>

                    <!-- CONTEXTE -->
                    <group col="2">
                        <group>
                            <field name="account_model" readonly="1"/>
                            <field name="investor_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="fund_id" readonly="1"/>
                        </group>
                    </group>

                    <!-- COMPTE CONCERNÉ -->
                    <group string="Compte à activer">
                        <field name="cash_account_id" invisible="account_model != 'cash'"/>
                        <field name="part_account_id" invisible="account_model != 'part'"/>
                    </group>

                    <!-- MOTIF -->
                    <group string="Motif de l’activation">
                        <field name="reason"
                               placeholder="Ex : Dossier KYC validé, décision conformité..."
                               required="1"/>
                    </group>

                </sheet>

                <!-- FOOTER -->
                <footer>
                    <button name="action_confirm"
                            type="object"
                            string="Confirmer l’activation"
                            class="btn-primary"/>

                    <button string="Annuler"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>

            </form>
        </field>
    </record>

</odoo>
