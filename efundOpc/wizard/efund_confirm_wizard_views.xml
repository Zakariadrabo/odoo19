<odoo>
    <record id="view_confirm_action_wizard_form" model="ir.ui.view">
        <field name="name">efund.confirm.action.wizard.form</field>
        <field name="model">efund.confirm.action.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmation">

                <sheet>
                    <group>
                        <div class="o_form_label text-warning">
                            <field name="message" nolabel="1"/>
                        </div>
                    </group>
                </sheet>

                <footer>
                    <button name="action_confirm"
                            type="object"
                            string="Oui"
                            class="btn-primary"/>

                    <button string="Non"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>
