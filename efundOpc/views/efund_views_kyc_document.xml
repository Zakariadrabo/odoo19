<odoo>
    <!-- ==================================================
        Kyc Document Form
        =================================================== -->
    <record id="view_efund_kyc_document_form" model="ir.ui.view">
        <field name="name">efund.kyc.document.form</field>
        <field name="model">efund.kyc.document</field>
        <field name="arch" type="xml">
            <form string="KYC Document" create="true" edit="true">
                <sheet>
                    <group>
                        <group>
                            <field name="investor_id" required="1"/>
                            <field name="document_type" required="1"/>
                            <field name="name"/>
                            <field name="file_id" widget="many2one_binary"/>
                            <field name="filename" readonly="1"/>
                        </group>
                        <group>
                            <field name="issued_date"/>
                            <field name="expiry_date"/>
                            <field name="status" widget="statusbar" statusbar_visible="uploaded,verified,expired"/>
                            <field name="verified_by"/>
                            <field name="verified_date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Add verification notes or remarks..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ==================================================
        Kyc Document Form
        =================================================== -->

    <record id="view_efund_kyc_document_tree" model="ir.ui.view">
        <field name="name">efund.kyc.document.tree</field>
        <field name="model">efund.kyc.document</field>
        <field name="arch" type="xml">
            <list string="KYC Documents" decoration-danger="status=='expired'" decoration-success="status=='verified'">
                <field name="name"/>
                <field name="document_type"/>
                <field name="filename"/>
                <field name="issued_date"/>
                <field name="expiry_date"/>
                <field name="status" widget="badge"/>
                <field name="verified_by"/>
                <field name="verified_date"/>
            </list>
        </field>
    </record>


</odoo>