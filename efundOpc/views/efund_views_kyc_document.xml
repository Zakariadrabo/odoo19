<odoo>
    <!-- ==================================================
        Kyc Document Form
        =================================================== -->
    <record id="view_efund_kyc_document_form" model="ir.ui.view">
        <field name="name">efund.kyc.document.form</field>
        <field name="model">efund.kyc.document</field>
        <field name="arch" type="xml">
            <form string="Document KYC">
                <header>
                    <button name="action_uploaded"
                            type="object"
                            string="Chargé"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_verify"
                            type="object"
                            string="Validé"
                            class="btn-primary"
                            invisible="state != 'uploaded'"/>
                    <button name="action_mark_expired"
                            type="object"
                            string="Archiver"
                            class="btn-danger"
                            invisible="state != 'verified'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group col="2">
                        <group>
                            <field name="full_name" invisible="investor_type !='individual'"/>
                            <field name="company_name" invisible="investor_type !='company'"/>
                            <field name="name"/>
                            <field name="document_type"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <group>
                            <field name="issued_date" options="{'numeric': true}"/>
                            <field name="expiry_date" options="{'numeric': true}"/>
                            <field name="verified_date" readonly="1" invisible="state != 'verified'"
                                   options="{'numeric': true}"/>
                        </group>
                    </group>
                    <group string="Fichier">
                        <field name="file_name_fname" invisible="1"/>
                        <field name="file_data" widget="image" required="1"/>
                    </group>

                </sheet>

            </form>
        </field>
    </record>

    <!-- ==================================================
        Kyc Document Form
        =================================================== -->

    <record id="view_efund_kyc_document_list" model="ir.ui.view">
        <field name="name">efund.kyc.document.list</field>
        <field name="model">efund.kyc.document</field>
        <field name="arch" type="xml">
            <list string="KYC Documents" decoration-danger="state=='expired'" decoration-success="state=='verified'">
                <field name="name"/>
                <field name="document_type"/>
                <field name="issued_date" options="{'numeric': true}"/>
                <field name="expiry_date" options="{'numeric': true}"/>
                <field name="file_name_fname" invisible="1"/>
                <field name="file_data" widget="binary" filename="file_name_fname"/>
                <field name="state"/>
                <field name="verified_date" options="{'numeric': true}"/>
            </list>
        </field>
    </record>


</odoo>