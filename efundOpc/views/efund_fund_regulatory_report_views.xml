<odoo>
    <record id="view_efund_fund_regulatory_report_list" model="ir.ui.view">
    <field name="name">efund.fund.regulatory.report.list</field>
    <field name="model">efund.fund.regulatory.report</field>
    <field name="arch" type="xml">
        <list decoration-success="state == 'validated'"
              decoration-danger="control_id.state == 'breach'">
            <field name="name"/>
            <field name="fund_id"/>
            <field name="date"/>
            <field name="state"/>
        </list>
    </field>
</record>
<record id="view_efund_fund_regulatory_report_form" model="ir.ui.view">
    <field name="name">efund.fund.regulatory.report.form</field>
    <field name="model">efund.fund.regulatory.report</field>
    <field name="arch" type="xml">
        <form string="État réglementaire OPCVM">

            <header>
                <field name="state"
                       widget="statusbar"
                       statusbar_visible="draft,validated,submitted"/>

                <button name="action_validate"
                        type="object"
                        string="Valider"
                        class="btn-primary"
                        invisible="state !='draft'"/>

                <button name="action_submit"
                        type="object"
                        string="Transmettre"
                        class="btn-success"
                        invisible="state !='validated'"/>
            </header>

            <sheet>

                <group>
                    <div class="o_form_label text-info">
                        État réglementaire de composition du portefeuille OPCVM
                        conforme aux exigences de l’AMF-UMOA.
                    </div>
                </group>

                <group col="2">
                    <group>
                        <field name="name"/>
                        <field name="fund_id"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="fund_type_id"/>
                        <field name="company_id"/>
                    </group>
                </group>

                <group string="Références réglementaires">
                    <field name="snapshot_id"/>
                    <field name="control_id"/>
                </group>

                <group string="Conclusion">
                    <field name="conclusion" nolabel="1"/>
                </group>

            </sheet>

            <chatter>
                <field name="message_follower_ids"/>
                <field name="message_ids"/>
            </chatter>


        </form>
    </field>
</record>

</odoo>