<odoo>
    <record id="view_efund_fund_redemption_list" model="ir.ui.view">
        <field name="name">efund.fund.redemption.list</field>
        <field name="model">efund.fund.redemption</field>
        <field name="arch" type="xml">
            <list string="Rachats"
                  decoration-info="state == 'validated'"
                  decoration-success="state == 'executed'"
                  decoration-muted="state == 'cancelled'">

                <field name="name"/>
                <field name="date_operation"/>
                <field name="fund_id"/>
                <field name="investor_id"/>
                <field name="redemption_type"/>
                <field name="parts_to_redeem"/>
                <field name="amount"/>
                <field name="state"/>

            </list>
        </field>
    </record>

    <record id="view_efund_fund_redemption_form" model="ir.ui.view">
        <field name="name">efund.fund.redemption.form</field>
        <field name="model">efund.fund.redemption</field>
        <field name="arch" type="xml">
            <form string="Rachat de parts">
                <!-- ================= HEADER ================= -->
                <header>
                    <button name="action_cancel_redemption"
                            type="object"
                            string="Annuler"
                            class="btn-primary"
                            invisible="state == 'executed'"/>
                    <button name="action_submit_redemption"
                            type="object"
                            string="Soumettre"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_validate_redemption"
                            type="object"
                            string="Valider"
                            class="btn-primary"
                            invisible="state != 'submitted'"/>
                    <button name="action_account_redemption"
                            type="object"
                            string="Comptabiliser"
                            class="btn-secondary"
                            invisible="state != 'validated'"/>
                     <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,validated,accounted,cancelled"/>
                </header>

                <!-- ================= SHEET ================= -->
                <sheet>

                     <group>
                        <div class="o_form_label text-warning">
                            Vous êtes dans le processus de validation de rachat.
                        </div>
                    </group>

                    <group col="3">
                        <group>
                            <field name="investor_id" readonly="1"/>
                            <field name="fund_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="part_account_id" readonly="1"/>
                            <field name="total_parts_available" readonly="1"/>
                        </group>
                        <group>
                            <field name="cash_account_id" readonly="1"/>
                            <field name="balance" readonly="1"/>
                        </group>
                    </group>
                    <group string="Détails du rachat" col="3">
                        <group>
                            <field name="redemption_type"/>
                            <field name="parts_to_redeem" readonly="redemption_type == 'total'" required="redemption_type == 'partial'"/>
                            <field name="cash_refund" />
                        </group>
                        <group>
                            <field name="estimated_amount" readonly="1"/>
                            <field name="estimated_nav"  readonly="1" />
                            <!-- A afficher la date de la VL
                            <field name="date_operation" readonly="1" options="{'numeric': true}"/>
                            -->
                            <field name="date_operation" readonly="1" options="{'numeric': true}"/>
                        </group>
                        <group>
                            <field name="amount" readonly="1" />
                            <field name="redemption_fee_rate"  readonly="1" />
                            <field name="redemption_fee_amount" readonly="1"/>
                            <field name="date_valeur" widget="datetime" />
                        </group>
                    </group>
                </sheet>

                <!-- ================= CHATTER ================= -->
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </chatter>

            </form>

        </field>
    </record>


</odoo>