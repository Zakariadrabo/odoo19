<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste -->
    <record id="view_efund_position_adjustment_list" model="ir.ui.view">
        <field name="name">efund.position.adjustment.list</field>
        <field name="model">efund.position.adjustment</field>
        <field name="arch" type="xml">
            <list string="Ajustements">
                <field name="name"/>
                <field name="position_id"/>
                <field name="event_id"/>
                <field name="adjustment_date"/>
                <field name="adjustment_type"/>
                <field name="quantity_change" sum="Total"/>
                <field name="cash_impact" sum="Total"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire -->
    <record id="view_efund_position_adjustment_form" model="ir.ui.view">
        <field name="name">efund.position.adjustment.form</field>
        <field name="model">efund.position.adjustment</field>
        <field name="arch" type="xml">
            <form string="Ajustement de Position">
                <header>
                    <button name="action_post" string="Comptabiliser" type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Annuler" type="object" class="btn-secondary"
                            invisible="state in ('cancelled', 'posted')"/>
                    <button name="action_draft" string="Remettre en brouillon" type="object" class="btn-secondary"
                            invisible="state != 'cancelled'"/>

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Références">
                            <field name="position_id"/>
                            <field name="event_id"/>
                            <field name="instrument_id"/>
                            <field name="fund_id"/>
                        </group>
                        <group string="Dates">
                            <field name="adjustment_date"/>
                            <field name="adjustment_type"/>
                        </group>
                    </group>
                    <group>
                        <group string="Impacts Quantitatifs">
                            <field name="quantity_change"/>
                            <field name="new_quantity"/>
                            <field name="price_adjustment"/>
                        </group>
                        <group string="Impacts Financiers">
                            <field name="cash_impact"/>
                            <field name="tax_amount"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Description" colspan="2">
                            <field name="description" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_efund_position_adjustment" model="ir.actions.act_window">
        <field name="name">Ajustements de Positions</field>
        <field name="res_model">efund.position.adjustment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>