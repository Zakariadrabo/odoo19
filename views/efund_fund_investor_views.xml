<odoo>

    <!-- ========================= -->
    <!-- LIST / TREE VIEW          -->
    <!-- ========================= -->
    <record id="view_efund_fund_investor_list" model="ir.ui.view">
        <field name="name">efund.fund.investor.list</field>
        <field name="model">efund.fund.investor</field>
        <field name="arch" type="xml">
            <list string="Investisseurs par fonds"
                  decoration-success="state == 'validated'"
                  decoration-warning="state == 'kyc_pending'"
                  decoration-danger="state == 'rejected'">

                <field name="investor_id"/>
                <field name="fund_id"/>
                <field name="state"/>
                <field name="validation_date"/>
                <field name="validated_by"/>

            </list>
        </field>
    </record>
    <!-- ========================= -->
    <!-- FORM VIEW                 -->
    <!-- ========================= -->
    <record id="view_efund_fund_investor_form" model="ir.ui.view">
        <field name="name">efund.fund.investor.form</field>
        <field name="model">efund.fund.investor</field>
        <field name="arch" type="xml">
            <form string="Investisseur – Fonds">
                <!-- HEADER -->
                <header>
                    <button name="action_submit_kyc"
                            type="object"
                            string="Soumettre KYC"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <button name="action_validate"
                            type="object"
                            string="Valider"
                            class="btn-primary"
                            invisible="state != 'kyc_pending'"/>

                    <button name="action_reject"
                            type="object"
                            string="Rejeter"
                            class="btn-danger"
                            invisible="state != 'kyc_pending'"/>

                    <button name="action_suspend"
                            type="object"
                            string="Suspendre"
                            class="btn-secondary"
                            invisible="state != 'validated'"/>
                    <field name="state"
                           widget="statusbar"/>
                </header>

                <sheet>

                    <group>
                        <group>
                            <field name="investor_id"/>
                            <field name="fund_id"/>
                        </group>
                        <group>
                            <field name="validation_date" readonly="1"/>
                            <field name="validated_by" readonly="1"/>
                        </group>
                    </group>

                    <notebook>

                        <!-- ONGLET INVESTISSEUR -->
                        <page string="Investisseur">
                            <group>
                                <field name="investor_id" readonly="1"/>
                                <field name="compliance_status" readonly="1"/>
                                <field name="kyc_score" readonly="1"/>
                            </group>
                        </page>

                        <!-- ONGLET FONDS -->
                        <page string="Fonds">
                            <group>
                                <field name="fund_id" readonly="1"/>
                                <field name="redemption_delay"/>
                                <field name="cutoff_time"/>
                            </group>
                        </page>

                        <!-- ONGLET DÉCISION -->
                        <page string="Décision">
                            <group>
                                <field name="rejection_reason"
                                       invisible="state != 'rejected'"/>
                            </group>
                        </page>

                    </notebook>

                </sheet>

                <!-- CHATTER -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>
</odoo>
