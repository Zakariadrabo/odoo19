<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue arbre pour les formes juridiques -->
    <record id="view_efund_forme_juridique_list" model="ir.ui.view">
        <field name="name">efund.forme.juridique.list</field>
        <field name="model">efund.forme.juridique</field>
        <field name="arch" type="xml">
            <list string="Forme Juridique" editable="bottom">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>
