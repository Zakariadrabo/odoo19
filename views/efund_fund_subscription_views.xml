<odoo>

    <record id="view_efund_fund_subscription_tree" model="ir.ui.view">
        <field name="name">efund.fund.subscription.tree</field>
        <field name="model">efund.fund.subscription</field>
        <field name="arch" type="xml">
            <list string="Souscriptions">
                <field name="investor_id"/>
                <field name="fund_id"/>
                <field name="date_operation"/>
                <field name="unit_value"/>
                <field name="amount"/>
                <field name="cash_used"/>
                <field name="parts"/>
                <field name="cash_refund"/>
                <field name="date_valeur"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_efund_fund_subscription_form" model="ir.ui.view">
        <field name="name">efund.fund.subscription.form</field>
        <field name="model">efund.fund.subscription</field>
        <field name="arch" type="xml">
            <form string="Subscription">
                <header>
                    <button name="action_cancel_subscription"
                            type="object"
                            string="Annuler"
                            class="btn-primary"
                            invisible="state == 'executed'"/>
                    <button name="action_submit_subscription"
                            type="object"
                            string="Soumettre"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_validate_subscription"
                            type="object"
                            string="Valider"
                            class="btn-primary"
                            invisible="state != 'submitted'"/>
                    <button name="action_account"
                            type="object"
                            string="Comptabiliser"
                            class="btn-secondary"
                            invisible="state != 'validated'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,validated,accounted,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group string="Informations générales">
                            <field name="investor_id" readonly="1"/>
                            <field name="fund_id" readonly="1"/>
                            <field name="date_operation"/>
                            <field name="allow_fractional_parts"/>
                        </group>
                        <group string="Compte espèces utilisé">
                            <field name="cash_account_id" readonly="1"/>
                            <field name="balance" readonly="1"/>
                        </group>
                        <group string="Montant / Parts">
                            <field name="amount"/>
                            <field name="unit_value"/>
                            <field name="cash_used"/>
                            <field name="parts"/>
                            <field name="cash_refund"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>


