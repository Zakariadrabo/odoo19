<odoo>

    <record id="view_efund_fund_subscription_tree" model="ir.ui.view">
        <field name="name">efund.fund.subscription.tree</field>
        <field name="model">efund.fund.subscription</field>
        <field name="arch" type="xml">
            <list string="Souscriptions">
                <field name="name"/>
                <field name="investor_id"/>
                <field name="fund_id"/>
                <field name="date_operation"/>
                <field name="nb_parts"/>
                <field name="vl"/>
                <field name="amount"/>
                <field name="payment_mode"/>
                <field name="state"/>
                <field name="journal_entry_id"/>
            </list>
        </field>
    </record>

    <record id="view_efund_fund_subscription_form" model="ir.ui.view">
        <field name="name">efund.fund.subscription.form</field>
        <field name="model">efund.fund.subscription</field>
        <field name="arch" type="xml">
            <form string="Subscription">
                <header>
                    <button name="action_validate_subscription"
                            type="object"
                            string="Valider"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_account"
                            type="object"
                            string="Comptabiliser"
                            class="btn-secondary"
                            invisible="state != 'validated'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,validated,accounted,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <group string="Informations générales">
                            <field name="name" readonly="1"/>
                            <field name="investor_id" readonly="1"/>
                            <field name="fund_id"/>
                            <field name="company_id" readonly="1"/>
                            <field name="date_operation"/>
                        </group>
                        <group string="Montant / Parts">
                            <field name="nb_parts"/>
                            <field name="vl"/>
                            <field name="amount"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                    </group>

                    <group string="Paiement">
                        <field name="payment_mode"/>
                        <field name="reference_payment"/>
                        <field name="bank_id"/>
                    </group>

                    <group string="Compte espèces utilisé">
                        <field name="cash_account_id"/>
                        <field name="available_cash" readonly="1"/>
                    </group>

                    <group string="Divers">
                        <field name="is_initial"/>
                        <field name="journal_entry_id" readonly="1"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fund_subscription_list" model="ir.actions.act_window">
        <field name="name">Souscriptions</field>
        <field name="res_model">efund.fund.subscription</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_subscriptions"
              name="Souscriptions"
              parent="menu_operations_root"
              action="action_fund_subscription_list"
              sequence="41"/>
</odoo>


