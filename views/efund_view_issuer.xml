<odoo>
    <!-- VUE KANBAN -->
    <record id="view_fund_issuer_kanban" model="ir.ui.view">
        <field name="name">efund.instrument.issuer.kanban</field>
        <field name="model">efund.instrument.issuer</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_title">
                                <strong><field name="name"/></strong>
                            </div>
                            <div><field name="country_id"/></div>
                            <div><field name="industry"/></div>
                            <div><field name="rating"/></div>
                            <div class="mt-2">
                                <span><field name="instrument_count"/> instruments</span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- VUE LIST -->
    <record id="view_fund_issuer_list" model="ir.ui.view">
        <field name="name">efund.instrument.issuer.list</field>
        <field name="model">efund.instrument.issuer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="short_name"/>
                <field name="country_id"/>
                <field name="industry"/>
                <field name="rating"/>
                <field name="instrument_count"/>
            </list>
        </field>
    </record>

    <!-- VUE FORM -->
    <record id="view_fund_issuer_form" model="ir.ui.view">
        <field name="name">efund.instrument.issuer.form</field>
        <field name="model">efund.instrument.issuer</field>
        <field name="arch" type="xml">
            <form string="Ã‰metteur d'instrument financier">
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="short_name"/>
                        <field name="country_id"/>
                        <field name="industry"/>
                        <field name="rating"/>
                        <field name="website"/>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>

                        <page string="Instruments Ã©mis">
                            <field name="instrument_count" readonly="1"/>
                            <button name="action_open_instruments"
                                    type="object"
                                    string="Voir les instruments"
                                    class="btn-primary"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
