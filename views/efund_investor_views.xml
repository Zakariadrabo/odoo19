<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_efund_investor_form" model="ir.ui.view">
        <field name="name">efund.investor.form.enhanced</field>
        <field name="model">efund.investor</field>
        <field name="arch" type="xml">

            <form string="Investor">
                <header>
                    <button name="action_check_kyc_compliance" type="object" string="Check KYC" class="oe_stat_button"
                            icon="fa-check-circle"
                            invisible="status in ('archived','kyc_rejected')"/>
                    <field name="status" widget="statusbar"/>
                </header>


                <!-- ========================== -->
                <!--    FICHE INVESTISSEUR     -->
                <!-- ========================== -->
                <sheet>
                    <group class="o_td_highlight">
                        <group string="Identité">
                            <field name="full_name"/>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="country_id"/>
                            <field name="available_cash" readonly="1" string="Cash disponible"/>
                        </group>
                        <group string="Conformité">
                            <field name="compliance_status" widget="badge" string="Compliance"/>
                            <field name="compliance_score" widget="progressbar" options="{'max_value': 100}"
                                   string="Score"/>
                            <field name="pep_flag" string="PEP"/>
                            <field name="sanctions_flag" string="Sanctions"/>
                            <field name="kyc_last_update" string="Last KYC Update"/>

                        </group>
                    </group>
                    <!-- ========================== -->
                    <!--         COMPTES            -->
                    <!-- ========================== -->

                    <notebook>
                        <page string="Comptes Client">
                            <group>
                                <group>
                                    <button name="action_create_investor_accounts" type="object" string="Créer comptes"
                                            class="oe_highlight" icon="fa-plus"
                                            invisible="account_part_ids or account_cash_ids"/>
                                </group>
                                <group>
                                    <button name="action_open_cash_deposit_wizard" type="object"
                                            string="Dépôt espèces"
                                            class="btn-primary" icon="fa-money"
                                            invisible="not account_cash_ids"/>
                                    <button name="action_open_subscription_wizard" type="object"
                                            string="+ Souscription"
                                            class="btn-success" icon="fa-arrow-up"
                                            invisible="not account_cash_ids"/>
                                </group>
                            </group>

                            <group>
                                <group string="Comptes Titres">
                                    <field name="account_part_ids" nolabel="1">
                                        <list string="Comptes Titres">
                                            <field name="name"/>
                                            <field name="account_number"/>
                                            <field name="fund_id"/>
                                            <field name="total_parts"/>
                                            <field name="state" widget="badge"/>
                                            <button name="action_redeem_parts" type="object" string="Rachat de parts"
                                                    class="oe_highlight" icon="fa-exchange" invisible ="state != 'active' or total_parts &lt;= 0"/>
                                        </list>
                                    </field>
                                </group>
                                <group string="Comptes Espèces">
                                    <field name="account_cash_ids" nolabel="1">
                                        <list string="Comptes Espèces">
                                            <field name="name"/>
                                            <field name="account_number"/>
                                            <field name="balance"/>
                                            <field name="state" widget="badge"/>
                                        </list>
                                    </field>
                                </group>
                            </group>
                        </page>


                        <!-- ========================== -->
                        <!--           KYC              -->
                        <!-- ========================== -->

                        <page string="KYC – Informations Client">
                            <group>
                                <group>
                                    <separator string="Identité"/>
                                    <field name="civilite"/>
                                    <field name="birthdate"/>
                                    <field name="nationality"/>
                                    <field name="activite"/>
                                    <field name="city"/>
                                </group>
                                <group>
                                    <separator string="Profil Financier"/>
                                    <field name="estimation"/>
                                    <field name="revenu"/>
                                    <field name="objectif"/>
                                </group>
                            </group>
                        </page>


                        <page string="Documents KYC">
                            <field name="document_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="file_name"/>
                                    <field name="file_data" widget="binary"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>

                        <page string="AML Monitoring">
                            <field name="aml_alert_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="severity" widget="badge"/>
                                    <field name="status" widget="badge"/>
                                    <field name="created_at"/>
                                </list>
                            </field>
                        </page>

                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

</odoo>
