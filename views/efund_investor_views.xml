<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================= -->
    <!--  ACTION PRINCIPALE       -->
    <!-- ========================= -->
    <record id="action_efund_investor" model="ir.actions.act_window">
        <field name="name">Investors</field>
        <field name="res_model">efund.investor</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and manage your fund investors here.
            </p>
        </field>
    </record>


    <!-- ========================= -->
    <!--  VUE LISTE                -->
    <!-- ========================= -->
    <record id="view_efund_investor_tree" model="ir.ui.view">
        <field name="name">efund.investor.tree</field>
        <field name="model">efund.investor</field>
        <field name="arch" type="xml">
            <list decoration-danger="status == 'kyc_rejected'"
                  decoration-warning="status == 'kyc_pending'"
                  decoration-success="status == 'kyc_approved'">
                <field name="name"/>
                <field name="company_id"/>
                <field name="kyc_level"/>
                <field name="kyc_score"/>
                <field name="status"/>
                <field name="pep_flag"/>
                <field name="sanctions_flag"/>
                <field name="risk_category"/>
                <field name="whitelisted"/>
                <field name="kyc_last_update"/>
            </list>
        </field>
    </record>

    <!-- ========================= -->
    <!--  VUE FORMULAIRE           -->
    <!-- ========================= -->
    <record id="view_efund_investor_form" model="ir.ui.view">
        <field name="name">efund.investor.form</field>
        <field name="model">efund.investor</field>
        <field name="arch" type="xml">
            <form string="Investor" create="true" edit="true">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,kyc_pending,kyc_approved,kyc_rejected,archived"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="company_id"/>
                            <field name="kyc_level"/>
                            <field name="kyc_score"/>
                            <field name="risk_category"/>
                            <field name="whitelisted"/>
                        </group>
                        <group>
                            <field name="pep_flag"/>
                            <field name="sanctions_flag"/>
                            <field name="kyc_operator_id"/>
                            <field name="kyc_last_update"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Add remarks or observations..."/>
                        </page>
                        <page string="KYC Documents">
                            <field name="document_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="KYC Checks">
                            <field name="kyc_check_ids">
                                <tree editable="bottom">
                                    <field name="check_type"/>
                                    <field name="result"/>
                                    <field name="checked_on"/>
                                    <field name="operator_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="AML Alerts">
                            <field name="aml_alert_ids">
                                <list editable="bottom">
                                    <field name="alert_date"/>
                                    <field name="alert_type"/>
                                    <field name="severity"/>
                                    <field name="resolved"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========================= -->
    <!--  VUE KANBAN               -->
    <!-- ========================= -->
    <record id="view_efund_investor_kanban" model="ir.ui.view">
        <field name="name">efund.investor.kanban</field>
        <field name="model">efund.investor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="kyc_level"/>
                <field name="kyc_score"/>
                <field name="risk_category"/>
                <field name="pep_flag"/>
                <field name="sanctions_flag"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_image">
                                <span class="fa fa-user fa-2x"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>KYC Level: <field name="kyc_level"/></div>
                                <div>Score: <field name="kyc_score"/></div>
                                <div>Status: <field name="status"/></div>
                                <div t-if="record.pep_flag.raw_value">üö® PEP Flagged</div>
                                <div t-if="record.sanctions_flag.raw_value">‚ö†Ô∏è Sanctions</div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
