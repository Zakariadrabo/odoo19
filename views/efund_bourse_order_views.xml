<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- LIST VIEW -->
    <record id="view_efund_bourse_order_list" model="ir.ui.view">
        <field name="name">efund.bourse.order.list</field>
        <field name="model">efund.bourse.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="order_date"/>
                <field name="fund_id"/>
                <field name="depositaire_sgi"/>
                <field name="instrument_id"/>
                <field name="quantity"/>
                <field name="price_limit"/>
                <field name="gross_amount"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_efund_bourse_order_form" model="ir.ui.view">
        <field name="name">efund.bourse.order.form</field>
        <field name="model">efund.bourse.order</field>
        <field name="arch" type="xml">
            <form string="Ordre de Bourse">
                <header>
                    <button name="action_validate"
                            type="object"
                            string="Valider"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel"
                            type="object"
                            string="Relâcher"
                            class="btn-danger"
                            invisible="state in ('executed','cancelled')"/>
                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <group>
                        <group string="Général">
                            <field name="order_date"/>
                            <field name="fund_id"/>
                            <field name="depositaire_sgi"/>
                        </group>

                        <group string="Type d’ordre">
                            <field name="is_subscription"/>
                            <field name="is_buy"/>
                            <field name="is_sell"/>
                            <field name="order_type"/>
                        </group>
                    </group>

                    <group string="Instrument">
                        <field name="instrument_id"/>
                        <field name="symbol"/>
                        <field name="market_place"/>
                        <field name="depository"/>
                    </group>

                    <group string="Conditions">
                        <field name="quantity"/>
                        <field name="price_limit"/>
                        <field name="allow_loss"/>
                        <field name="expiry_date"/>
                    </group>

                    <group string="Prénotation">
                        <field name="gross_amount" readonly="1"/>
                        <field name="commission_sgi" readonly="1"/>
                        <field name="commission_total" readonly="1"/>
                    </group>

                    <group string="Signataires">
                        <field name="signatory_ids" widget="many2many_tags"/>
                    </group>

                    <group string="Commentaires">
                        <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
