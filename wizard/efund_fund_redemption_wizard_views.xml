<odoo>
    <record id="view_fund_redemption_wizard_form" model="ir.ui.view">
        <field name="name">efund.fund.redemption.wizard.form</field>
        <field name="model">efund.fund.redemption.wizard</field>
        <field name="arch" type="xml">
            <form string="Rachat de parts">
                <group>
                    <group>
                        <field name="investor_id"/>
                        <field name="account_part_id"/>
                        <field name="fund_id"/>
                    </group>
                    <group>
                        <field name="total_parts_available"/>
                        <field name="redemption_type"/>
                        <field name="parts_to_redeem"  invisible="redemption_type == 'total'" required="redemption_type == 'partial'"/>
                    </group>
                </group>

                <group>
                    <group>
                        <field name="nav_date"/>
                        <field name="estimated_nav"/>
                    </group>
                    <group>
                        <field name="estimated_amount" readonly="1"/>
                    </group>
                </group>

                <footer>
                    <button name="action_confirm_redemption"
                            type="object"
                            string="Confirmer le rachat"
                            class="oe_highlight"/>
                    <button string="Annuler"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
