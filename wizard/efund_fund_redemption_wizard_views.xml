<odoo>

    <record id="view_efund_fund_redemption_wizard_form" model="ir.ui.view">
        <field name="name">efund.fund.redemption.wizard.form</field>
        <field name="model">efund.fund.redemption.wizard</field>
        <field name="arch" type="xml">
            <form string="Rachat de parts">
                <sheet>
                    <group>
                        <div class="o_form_label text-warning">
                            Vous êtes sur le point de saisir une demande de rachat.
                        </div>
                    </group>

                    <group col="3">
                        <group>
                            <field name="investor_id" readonly="1"/>
                            <field name="fund_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="part_account_id" readonly="1"/>
                            <field name="total_parts_available" readonly="1"/>
                        </group>
                        <group>
                            <field name="cash_account_id" readonly="1"/>
                            <field name="balance" readonly="1"/>
                        </group>
                    </group>
                    <group string="Détails du rachat" col="3">
                        <group>
                            <field name="redemption_type"/>
                            <field name="parts_to_redeem" readonly="redemption_type == 'total'" required="redemption_type == 'partial'"/>
                        </group>
                        <group>
                            <field name="estimated_nav"  readonly="1" />
                            <field name="estimated_amount" readonly="1"/>
                        </group>
                        <group>
                            <field name="estimated_amount"  readonly="1" />
                            <field name="date_operation" readonly="1"/>
                        </group>
                    </group>
                </sheet>

                <footer>
                    <button name="action_confirm"
                            type="object"
                            string="Soumettre le rachat"
                            class="btn-primary"/>

                    <button string="Annuler"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>

            </form>
        </field>
    </record>

</odoo>
