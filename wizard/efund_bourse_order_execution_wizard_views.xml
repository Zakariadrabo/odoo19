<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_efund_bourse_order_execution_wizard_form"
            model="ir.ui.view">
        <field name="name">efund.bourse.order.execution.wizard.form</field>
        <field name="model">efund.bourse.order.execution.wizard</field>
        <field name="arch" type="xml">
            <form string="Exécution de l’ordre">
                <group>
                    <field name="order_id"/>
                    <field name="remaining_quantity"/>
                </group>

                <group string="Détails d'exécution">
                    <field name="executed_quantity"/>
                    <field name="execution_price"/>
                    <field name="execution_date"/>
                </group>

                <footer>
                    <button name="action_confirm_execution"
                            string="Valider l’exécution"
                            type="object"
                            class="btn-primary"/>
                    <button string="Annuler"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
